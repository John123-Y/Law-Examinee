{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"], // Add DOM for browser APIs
    "moduleResolution": "node"
  },
  "include": ["/*.ts", "public/js//*.ts"],
  "exclude": ["node_modules", "dist", "public/dist"]
}